<div class='completed_batches_container container'>
  <h3 id='completed_batches_title' class='bg-success'>Completed Batches</h3>
  <table class="table table-striped completed_batches">
    <thead class='text-center'>
      <tr>
        <th scope='col' style="width: 25%" >ID</th>
        <th scope='col' style="width: 25%" >Date clearanced</th>
        <th scope='col' style="width: 25%" >Total Items</th>
        <th scope='col' style="width: 25%" >Options</th>
      </tr>
    </thead>
    <tbody>
      <%- @completed_batches.each do |completed_batch| -%>
        <tr class='batch-row text-center'>
          <td scope='row'><%= completed_batch.title %></td>
          <td><%= l(completed_batch.created_at, format: :short) %></td>
          <td><%= completed_batch.items.count %></td>
          <td>
            <div class='btn-group'>
              <%= button_to "HTML", clearance_batch_path(completed_batch), method: :get, class: 'report-btn html-btn btn btn-secondary'  %>
              <%= button_to "PDF", clearance_batch_path(completed_batch, format: :pdf), method: :get, class: 'report-btn pdf-btn btn btn-secondary'  %>
              <%= button_to "CSV", clearance_batch_path(completed_batch, format: :csv), method: :get, class: 'report-btn csv-btn btn btn-secondary'  %>
            </div>
          </td>
        </tr>
      <%- end -%>
    </tbody>
  </table>
</div>
